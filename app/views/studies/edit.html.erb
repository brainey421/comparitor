<div class="row">
  <div class="col-md-12">
    <h1><%= link_to "My Studies:", list_study_path(session[:user_id]) %> <%= @study.name %></h1>
  </div>
</div>
<br>
<div class="row">
  <%= form_tag add_to_study_path, method: "get" do %>
    <div class="col-lg-5">
      <div class="input-group">
        <span class="input-group-addon">new item</span>
        <input name="item_name" type="text" class="form-control" placeholder="Name">
      </div>
    </div>
    <div class="col-lg-5">
      <div class="input-group">
		<span class="input-group-addon">description</span>
        <input name="item_description" type="text" class="form-control" placeholder="Description">
      </div>
    </div>
	<div class="col-lg-2">
	  <button class="btn btn-primary">add item</button>
	</div>
  <% end %>
</div>
<br>
<div class="row">
  <div class="col-md-12">
	<div class="panel panel-default">
	  <table class="table">
		<tr>
	      <th>Item</th>
		  <th>Description</th>
		</tr>
		<% @items.each do |item| %>
		  <tr>
		  	<td class="col-md-3"><%= item.name %></td>
			<td><%= item.description %></td>
		  </tr>
		<% end %>
	  </table>
    </div>
  </div>
</div>