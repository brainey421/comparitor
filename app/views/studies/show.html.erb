<div class="row">
  <div class="col-md-12">
	<% if @study.active %>
	  <h1><%= @study.name %>: <%= link_to "Click here to start comparing!", assign_comparison_path(@study.id) %></h1>
	<% else %>
	  <h1><%= @study.name %></h1>
	<% end %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-12">
	<div class="panel panel-default">
	  <table class="table">
		<tr>
	      <th>Item</th>
		  <th>Description</th>
		</tr>
		<% @items.each do |item| %>
		  <tr>
			<% if item.link %>
		  	  <td class="col-md-3"><%= link_to item.name, item.link, {target: "_blank"} %></td>
			<% else %>
			  <td class="col-md-3"><%= item.name %></td>
			<% end %>
			<td class="col-md-9"><%= item.description %></td>
		  </tr>
		<% end %>
	  </table>
    </div>
  </div>
</div>