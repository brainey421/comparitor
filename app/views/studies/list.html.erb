<div class="row">
  <div class="col-md-12">
	<% if @email == session[:user_email] %>
      <h1><%= link_to "Studies:", studies_path %> My Studies</h1>
	<% else %>
	  <h1><%= link_to "Studies:", studies_path %> <%= @email %></h1>
	<% end %>
  </div>
</div>
<% if @email == session[:user_email] %>
  <br>
  <div class="row">
    <%= form_tag new_study_path, method: "get" do %>
      <div class="col-md-5">
        <div class="input-group">
          <span class="input-group-addon">new study</span>
          <input name="study_name" type="text" class="form-control" placeholder="Name">
        </div>
      </div>
	  <div class="col-md-7">
	    <button class="btn btn-primary">create study</button>
	  </div>
    <% end %>
  </div>
<% end %>
<br>
<div class="row">
  <div class="col-md-12">
  	<div class="panel panel-default">
  	  <table class="table">
  		<tr>
  	      <th>Study</th>
		  <th>Options</th>
  		</tr>
  	    <% @studies.each do |study| %>
  	      <tr>
  			<td class="col-md-3"><%= link_to study.name, show_study_path(study.id) %></td>
			<td class="col-md-9">
			  <% if study.user_id == session[:user_id] && study.active == false %>
  			    <div class="btn-group">
                  <%= link_to raw("<button type=\"button\" class=\"btn btn-sm btn-primary\">edit</button>"), edit_study_path(study.id) %>
                </div>
 		        <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-success dropdown-toggle" data-toggle="dropdown">
                    activate <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" role="menu">
                    <li><%= link_to "activate study (you will no longer be able to edit study)", activate_study_path(study.id) %></li>
                  </ul>
                </div>
			  <% end %>
			  <% if study.active == true %>
  			    <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown">
				    start comparing
				  </button>
                </div>
			  <% end %>
			  <% if study.user_id == session[:user_id] %>
 		        <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-danger dropdown-toggle" data-toggle="dropdown">
                    delete <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" role="menu">
                    <li><%= link_to "delete study forever", destroy_study_path(study.id) %></li>
                  </ul>
                </div>
			  <% end %>
			</td>
  		  </tr>
  	    <% end %>
  	  </table>
    </div>
  </div>
</div>