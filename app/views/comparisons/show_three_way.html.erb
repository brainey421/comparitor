<div class="row">
  <div class="col-md-12 text-center">
    <h1>How would you compare these? Ties are OK.</h1>
	<h4><%= @study_name %></h4>
  </div>
</div>
<br>
<%= form_tag three_way_comparison_path(@item1.id, @item2.id, @item3.id), method: "get" do %>
<div class="row">
  <div class="col-md-12">
    <div class="jumbotron">
	  <div class="row">
        <div class="col-md-4">
		  <% if @item1.link %>
	        <h3 class="text-center"><%= link_to @item1.name, @item1.link, {target: "_blank"} %></a></h3>
	      <% else %>
		    <h3 class="text-center"><%= @item1.name %></a></h3>
		  <% end %>
	      <br>
	      <%= @item1.description %>
	    </div>
	    <div class="col-md-4">
	      <% if @item1.link %>
	        <h3 class="text-center"><%= link_to @item2.name, @item2.link, {target: "_blank"} %></a></h3>
		  <% else %>
		    <h3 class="text-center"><%= @item2.name %></a></h3>
		  <% end %>
	      <br>
	      <%= @item2.description %>
	    </div>
	    <div class="col-md-4">
	      <% if @item3.link %>
	        <h3 class="text-center"><%= link_to @item3.name, @item3.link, {target: "_blank"} %></a></h3>
		  <% else %>
		    <h3 class="text-center"><%= @item3.name %></a></h3>
		  <% end %>
	      <br>
	      <%= @item3.description %>
	    </div>
	  </div>
	  <br>
	  <div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-2">
  		  <select class="form-control" name="rank1">
  		    <option value="1">First</option>
  		    <option value="2">Second</option>
  		    <option value="3">Third</option>
  		  </select>
	    </div>
		<div class="col-md-2"></div>
		<div class="col-md-2">
  		  <select class="form-control" name="rank2">
  		    <option value="1">First</option>
  		    <option value="2">Second</option>
  		    <option value="3">Third</option>
  		  </select>
	    </div>
		<div class="col-md-2"></div>
		<div class="col-md-2">
  		  <select class="form-control" name="rank3">
  		    <option value="1">First</option>
  		    <option value="2">Second</option>
  		    <option value="3">Third</option>
  		  </select>
	    </div>
		<div class="col-md-1"></div>
	  </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 text-center">
	<button class="btn btn-primary btn-lg">Submit!</button>
  </div>
  <div class="col-md-3"></div>
</div>
<% end %>