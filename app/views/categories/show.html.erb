<div class="row">
  <div class="col-md-12">
    <h1><%= link_to "Categories:", categories_path %> <%= @category %></h1>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-12">
	<div class="panel panel-default">
	  <table class="table">
		<tr>
	      <th>Name</th>
		  <th>Description</th>
		</tr>
	    <% @members.each do |member| %>
	      <tr>
			<td class="col-md-3"><%= link_to member.name, member.link, {target: "_blank"} %></td>
			<td><%= member.description %></td>
		  </tr>
	    <% end %>
	  </table>
    </div>
  </div>
</div>